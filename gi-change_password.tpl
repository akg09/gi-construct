<!--File Name:gi-change_password.tpl-->
<form class="form-horizontal">
	<div clas="col-md-12">
		<div class="form-group">
			<label class="control-label col-md-2">Current Password*</label>
			<div class="col-md-3">
				<input type="text" class="form-control" name="old_password" id="old_password">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">New Password*</label>
			<div class="col-md-3">
				<input type="text" class="form-control" name="password" id="password">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Re-type Password*</label>
			<div class="col-md-3">
				<input type="text" class="form-control" name="re_password" id="re_password">
			</div>
		</div>
		<div class="col-md-offset-2"><input type="button" class="btn btn-success ml" value="Save"></div>
	</div>
</form>